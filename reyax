#include <ESP8266WiFi.h>
#include <PubSubClient.h>

// ---------- WiFi Credentials ----------
const char* ssid = "";
const char* password = "";

// ---------- Reyex MQTT Server ----------
const char* mqtt_server = "iot.reyax.com";   // Reyex Cloud broker
const int mqtt_port = 1883;                    // Use 8883 for SSL (if enabled)
const char* mqtt_user = "";      // Reyex Device ID / Username
const char* mqtt_pass = "";     // Reyex Device Key / Password
const char* network_id = "";    // Reyex Network ID

// ---------- Pin Definitions ----------
#define LED LED_BUILTIN
#define RELAY1 D1
#define RELAY2 D2
#define RELAY3 D5
#define RELAY4 D6

// ---------- MQTT Topics ----------
String TOPIC_RELAY1 = String(network_id) + "/relay/relay_1/cmd";
String TOPIC_RELAY2 = String(network_id) + "/relay/relay_2/cmd";
String TOPIC_RELAY3 = String(network_id) + "/relay/relay_3/cmd";
String TOPIC_RELAY4 = String(network_id) + "/relay/relay_4/cmd";

// State topics to publish back
String STATE_RELAY1 = String(network_id) + "/relay/relay_1/state";
String STATE_RELAY2 = String(network_id) + "/relay/relay_2/state";
String STATE_RELAY3 = String(network_id) + "/relay/relay_3/state";
String STATE_RELAY4 = String(network_id) + "/relay/relay_4/state";

WiFiClient espClient;
PubSubClient client(espClient);

// ---------- Pin Setup ----------
void setup_pins() {
  pinMode(LED, OUTPUT);
  pinMode(RELAY1, OUTPUT);
  pinMode(RELAY2, OUTPUT);
  pinMode(RELAY3, OUTPUT);
  pinMode(RELAY4, OUTPUT);

  // Initial OFF state
  digitalWrite(LED, HIGH);
  digitalWrite(RELAY1, HIGH);
  digitalWrite(RELAY2, HIGH);
  digitalWrite(RELAY3, HIGH);
  digitalWrite(RELAY4, HIGH);
}

// ---------- WiFi Connection ----------
void setup_wifi() {
  delay(10);
  Serial.println();
  Serial.print("Connecting to ");
  Serial.println(ssid);

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  digitalWrite(LED, LOW);  
  Serial.println("\nâœ… WiFi connected");
  Serial.print("IP Address: ");
  Serial.println(WiFi.localIP());
}

// ---------- MQTT Callback ----------
void callback(char* topic, byte* payload, unsigned int length) {
  String message = "";
  for (int i = 0; i < length; i++) {
    message += (char)payload[i];
  }

  Serial.print("ðŸ“© Message arrived [");
  Serial.print(topic);
  Serial.print("]: ");
  Serial.println(message);

  // ---------- Relay 1 ----------
  if (String(topic) == TOPIC_RELAY1) {
    if (message == "ON") {
      digitalWrite(RELAY1, LOW);
      client.publish(STATE_RELAY1.c_str(), "ON");
    } else if (message == "OFF") {
      digitalWrite(RELAY1, HIGH);
      client.publish(STATE_RELAY1.c_str(), "OFF");
    }
  }

  // ---------- Relay 2 ----------
  if (String(topic) == TOPIC_RELAY2) {
    if (message == "ON") {
      digitalWrite(RELAY2, LOW);
      client.publish(STATE_RELAY2.c_str(), "ON");
    } else if (message == "OFF") {
      digitalWrite(RELAY2, HIGH);
      client.publish(STATE_RELAY2.c_str(), "OFF");
    }
  }

  // ---------- Relay 3 ----------
  if (String(topic) == TOPIC_RELAY3) {
    if (message == "ON") {
      digitalWrite(RELAY3, LOW);
      client.publish(STATE_RELAY3.c_str(), "ON");
    } else if (message == "OFF") {
      digitalWrite(RELAY3, HIGH);
      client.publish(STATE_RELAY3.c_str(), "OFF");
    }
  }

  // ---------- Relay 4 ----------
  if (String(topic) == TOPIC_RELAY4) {
    if (message == "ON") {
      digitalWrite(RELAY4, LOW);
      client.publish(STATE_RELAY4.c_str(), "ON");
    } else if (message == "OFF") {
      digitalWrite(RELAY4, HIGH);
      client.publish(STATE_RELAY4.c_str(), "OFF");
    }
  }
}

// ---------- Reconnect to MQTT ----------
void reconnect() {
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection... ");

    if (client.connect("VFB0olYdSi9awPc6ApONn4X4R7s5nsfBvmQr", mqtt_user, mqtt_pass)) {
      Serial.println("connected âœ…");
      // Subscribe to command topics
      client.subscribe(TOPIC_RELAY1.c_str());
      client.subscribe(TOPIC_RELAY2.c_str());
      client.subscribe(TOPIC_RELAY3.c_str());
      client.subscribe(TOPIC_RELAY4.c_str());
      Serial.println("ðŸ“¡ Subscribed to all Reyex relay topics.");
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" â€” retrying in 5 seconds");
      delay(5000);
    }
  }
}

// ---------- Setup ----------
void setup() {
  Serial.begin(115200);
  setup_pins();
  setup_wifi();
  client.setServer(mqtt_server, mqtt_port);
  client.setCallback(callback);
}

// ---------- Loop ----------
void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();
}
